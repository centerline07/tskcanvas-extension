{
  "name": "mastercanvas-extension",
  "displayName": "MasterCanvas Tab Saver",
  "version": "1.0.2",
  "description": "Save all open browser tabs to your MasterCanvas with one click",
  "author": "centerline07",
  "homepage": "https://mastercanvas.app",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.1.3",
    "plasmo": "^0.90.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.287",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "puppeteer": "^24.34.0",
    "sharp": "^0.34.5",
    "typescript": "^5.7.2"
  },
  "manifest": {
    "permissions": [
      "tabs",
      "storage",
      "cookies"
    ],
    "host_permissions": [
      "https://mastercanvas.app/*",
      "https://*.convex.site/*",
      "https://*.clerk.accounts.dev/*"
    ],
    "homepage_url": "https://mastercanvas.app"
  }
}
